<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="alignmentResult"
			type="hr.fer.common.models.sequencealigner.AlignmentResultItem" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/positionText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="10dp"
			android:layout_marginTop="20dp"
			android:text="@{`Result ` + alignmentResult.position}"
			android:textColor="@color/blue_dark"
			android:textSize="18sp"
			android:fontFamily="@font/fira_code_bold"
			tools:text="Result 1"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<HorizontalScrollView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="40dp"
			android:layout_marginEnd="10dp"
			android:layout_marginBottom="20dp"
			android:clickable="false"
			android:focusable="false"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/positionText"
			app:layout_constraintTop_toTopOf="@+id/positionText">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/firstResultLine"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/fira_code_medium"
					android:textColor="@color/blue_dark"
					android:textSize="14sp"
					android:text="@{alignmentResult.resultLineSequenceA}"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					tools:text="ATCGCTACG" />

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/secondResultLine"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/fira_code_medium"
					android:textColor="@color/blue_dark"
					android:textSize="14sp"
					android:text="@{alignmentResult.resultLIneActionsTaken}"
					app:layout_constraintEnd_toEndOf="@+id/firstResultLine"
					app:layout_constraintHorizontal_bias="0.0"
					app:layout_constraintStart_toStartOf="@+id/firstResultLine"
					app:layout_constraintTop_toBottomOf="@+id/firstResultLine"
					tools:text="ACTGC" />

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/thirdResultLine"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/fira_code_medium"
					android:textColor="@color/blue_dark"
					android:textSize="14sp"
					android:text="@{alignmentResult.resultLineSequenceB}"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="@+id/firstResultLine"
					app:layout_constraintHorizontal_bias="0.0"
					app:layout_constraintStart_toStartOf="@+id/firstResultLine"
					app:layout_constraintTop_toBottomOf="@+id/secondResultLine"
					tools:text="ACTGC" />

			</androidx.constraintlayout.widget.ConstraintLayout>

		</HorizontalScrollView>

		<View
			android:id="@+id/divider"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/blue_light"
			app:layout_constraintBottom_toBottomOf="parent"
			android:alpha="0.5"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>